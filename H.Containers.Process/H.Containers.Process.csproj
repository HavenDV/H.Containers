<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;netstandard2.1;</TargetFrameworks>
    <LangVersion>8</LangVersion>
    <Nullable>enable</Nullable>
    <RootNamespace>H.Containers</RootNamespace>
    <DisableFastUpToDateCheck>true</DisableFastUpToDateCheck>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\H.Containers\H.Containers.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="H.Pipes" Version="1.0.9" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="$(OutDir)Application\*.*" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="$(OutDir)Application\*.*" />
  </ItemGroup>

  <ItemGroup>
    <ApplicationFiles Include="..\H.Containers.Process.Application\bin\$(ConfigurationName)\netcoreapp3.1\*.*" />
  </ItemGroup>

  <Target Name="CopyApplication" BeforeTargets="PreBuildEvent">
    <Copy SourceFiles="@(ApplicationFiles)" DestinationFolder="$(OutDir)Application" />
  </Target>

  <ItemGroup>
    <PackageReference Include="Microsoft.Bcl.AsyncInterfaces" Version="1.1.0" Condition="'$(TargetFramework)' == 'netstandard2.0'" />
  </ItemGroup>

</Project>